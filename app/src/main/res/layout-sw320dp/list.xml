<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:src="@drawable/gitar4"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:background="@drawable/blaur"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            >



            <TextView
                android:id="@+id/textViewMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great Deal"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/textViewPorsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grab it!"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="#fff"
                />




            <TextView
                android:id="@+id/textViewHrga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectfg"
                android:text="Shop Now"
                android:textSize="14dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:padding="5dp"
                android:layout_marginTop="16dp"

                />




        </LinearLayout>






    </FrameLayout>

</RelativeLayout>
